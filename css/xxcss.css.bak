/* Notes */

.note.presutta {
    position: relative;
    top: -1.1em;
}

.presutta .details {
    min-width:15em;
}

.note  {
    background: url(../images/info.png) no-repeat;
	border-radius: 2px;
	padding-left: .9em;
	font-weight: normal;
		}
a.seesutta {
		font-weight: bold;
}
		
.note .details {
    position:absolute;
    visibility:hidden;
    opacity:0;
    background: palegoldenrod;
    border: 2px solid goldenrod;
    transition: 0.12s;
    font-size: 90%;
    max-width: 75%; /*20em;*/
    z-index: 1002;
}

.note:hover .details {
    visibility:visible;
    opacity: 1;
    transition: 0.12s;
}

/* Copyright Info */

.copyrightnote.presutta {
    position: relative;
    top: -.1em;
}

.copyrightnote  {
    background: url(../images/copyright.png) no-repeat;
	border-radius: 4px;
	padding-left: 1.2em;
	padding-right: 1,2em;
		}

.copyrightnote .details {
    position:absolute;
    visibility:hidden;
    opacity:0;
    background: palegoldenrod;
    border: 2px solid goldenrod;
    transition: 0.12s;
    font-size: 88%;
	color: #540;
    max-width: 22em;
    z-index: 1002;
}

.copyrightnote:after{
	content:"Copyright Information ";
	padding-left:.4em;
}

.copyrightnote:hover .details {
    visibility:visible;
    opacity: 1;
    transition: 0.12s;
}

p, .p {
    display: block;
    padding:0.5em;
}

/* Pali Lookup */

.lookup {
	position: relative;
}

.meaning {
    position:absolute;
    visibility: hidden;
    display:block;
    opacity: 0;
    
    bottom: 1.6em;
    left: -7em;
    z-index: 1001;
    
    border: 1px solid darkorchid;
    background: pink;
    border-radius: 5px;
    font-size:16px;
    font-weight:normal;
    font-style:normal;
    text-decoration: none;
    text-align: left;
    padding: 0.1em 0.5em;
    
    margin-top:1em;
    min-width:10em;
    max-width:20em;
    transition: 100ms;
}

.lookup:hover .meaning {
    visibility:visible;
    opacity: 1;
    transition: 100ms;
}

.lookup a {
    font-weight: bold;
}

